<% if (example = @objects.select(&:push_url).first) %>

<p>
Sample git quick start:
</p>

<pre>
git clone <%= example.push_url %> <%= example.name unless example.push_url.match(/:(\S+)\.git$/).andand[1] == example.name %>
cd <%= example.name %>
# edit files
git add the/files/you/changed
git commit
git push
</pre>

<% end %>

